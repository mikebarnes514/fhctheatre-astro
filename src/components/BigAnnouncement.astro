---
const { title } = Astro.props;
---
<div class="announcementOuter">
  <div class="announcementInner">
    { title && <h3 class="announcementTitle">{title}</h3> }
    <div class="announcementCopy">
      <slot name="copy" />
    </div>
  </div>
</div>
<style>
  .announcementOuter {
    display: grid;
    padding: 1em;
    background-color: var(--red);
    border-radius: 16px;
    margin: 1em 0;
  }
  .announcementInner {
    display: grid;
    grid-template-rows: auto 1fr;
    gap: 1em;
    border: var(--marqueeBorder);
    border-radius: var(--marqueeBorderRadius);
    align-items: center;
    justify-content: center;
    padding: 1em 2em 2em;
  }
  .announcementTitle {
    color: var(--white);
    font-size: var(--h2);
    text-align: center;
    margin: 0;
  }
  .announcementCopy {
    color: var(--white);
    text-align: center;
  }

  @media screen and (min-width: 870px) {
    .announcementOuter {
      margin: 2em 0;
      padding: 2em;
    }
    .announcementInner {
      padding: 1.5em 2.5em 2.5em;
      gap: 1.5em;
    }
  }
</style>
