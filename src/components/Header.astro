---
import NavMenu from "./NavMenu.astro";

---
<header class="header">
    <h1 id="siteTitle"></h1>
    <NavMenu />
</header>
<script>
    const title = (document.documentElement.clientWidth > 472 ? 'Forest Hills Central' : 'FHC') + ' Theatre'; 
    const target = window.document.getElementById('siteTitle');
    const flickerLetter = (letter: string) => `<span style="animation: text-flicker-in-glow ${Math.random()*4}s linear both ">${letter}</span>`
    const flickerAndColorText = (text: string) => text.split('').map(flickerLetter).join('');
    const neonGlory = (target: HTMLElement) => target.innerHTML = flickerAndColorText(title ?? '');

    if (target != null) {
        neonGlory(target);
    }
</script>
