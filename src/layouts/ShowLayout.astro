---
import BaseLayout from './BaseLayout.astro';
---

<BaseLayout>
  <section class="showPage">
    <div class="showImage">
      <slot name="showImage" />
    </div>
    <div class="showTitle">
      <slot name="showTitle" />
    </div>
    <div class="showCopy">
      <div class="showDates">
        <slot name="showDates" />
      </div>
      <slot name="showCopy" />
      <div class="showTickets">
        <slot name="showTickets" />
      </div>
    </div>
  </section>
</BaseLayout>
<style>
  .showPage {
    display: flex;
    flex-direction: column;
    gap: var(--gap);
  }
  .showImage {
    grid-area: image;
    text-align: center;
  }
  .showTitle {
    grid-area: title;
    text-align: center;
  }
  .showCopy {
    grid-area: copy;
    display: flex;
    flex-direction: column;
    gap: 1em;
  }
  .showCalendar {
    padding-top: 2em;
    text-align: center;
  }
  h3 {
    color: var(--primary);
    text-align: center;
  }

  @media screen and (min-width: 870px) {
    .showPage {
      display: grid;
      grid-template-columns: auto 1fr;
      grid-template-rows: auto 1fr;
      grid-template-areas:
        'image title'
        'image copy';
      gap: var(--gap);
    }
    .showImage {
      padding-right: 2em;
      max-width: 450px;
    }
    .showDates {
      font-size: var(--h4);
      font-weight: 600;
      text-align: center;
    }
    .showTickets {
      font-size: var(--h4);
      font-style: italic;
      text-align: center;
    }
  }
</style>
